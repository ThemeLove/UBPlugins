<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@drawable/lenovo_pay_shape_round_rect_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_payTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/lenovo_pay_shape_round_rect_gray_top"
            android:text="选择支付方式"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_payOrderInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Y100" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/ll_payMethodItemContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="3dp" >
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/ubsdk_pay_sdk_logo"
            android:background="@drawable/lenovo_pay_shape_round_rect_gray_bottom"
            android:textColor="#708090"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/ubsdk_pay_sdk_logo"
        android:scaleType="center"
        android:src="@drawable/lenovo_pay_ic_close" />

</RelativeLayout>