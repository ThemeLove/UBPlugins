<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_payMethodItemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ubsdk_pay_selector_paymethoditem"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_payMethodLogo"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ubsdk_pay_ali_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="3dp"
            android:background="#CCCCCC" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_payMethodName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#000000"
        android:text="支付宝" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/tv_payMethodDesc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
         android:textSize="10sp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:text="安全可靠\r\n支付快速便捷" />

</LinearLayout>